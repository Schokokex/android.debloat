# (uninstalling)
# com.huawei.hifolder
#
# also bloating recommended apps on launcher but reinstalled by work profile


pm list packages -3 | sed 's/package:/pm uninstall --user 0 /g' | sh

for i in $toremove
do
echo -e "\e[1;31m removing package: $i \e[0m"
printf "System: "
pm uninstall $i
printf "User 0: "
pm uninstall --user 0 $i
done
